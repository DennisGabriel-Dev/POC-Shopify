<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Html body:</strong>
    <%= sanitize product.html_body %>
  </p>

  <p>
  <strong>Image:</strong>
    <img src="<%= product.image %>">
  </p>

</div>
